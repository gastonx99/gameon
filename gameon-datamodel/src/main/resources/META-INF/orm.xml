                 version="2.1">

    <!--  Entities -->
    <entity class="se.dandel.gameon.domain.model.Tournament"/>
    <entity class="se.dandel.gameon.domain.model.Season"/>
    <entity class="se.dandel.gameon.domain.model.Team"/>
    <entity class="se.dandel.gameon.domain.model.Match"/>
    <entity class="se.dandel.gameon.domain.model.User"/>
    <entity class="se.dandel.gameon.domain.model.Venue"/>
